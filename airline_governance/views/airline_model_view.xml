<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="airline_model_action" model="ir.actions.act_window">
            <field name="name">Airlines</field>
            <field name="res_model">airline.model</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_upcoming' : 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Airline, the first step of a new airline!
                </p>
            </field>
        </record>
        <record id="airline_passenger_model_action" model="ir.actions.act_window">
            <field name="name">Passengers</field>
            <field name="res_model">passenger.model</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Passenger, the first step of a new passenger!
                </p>
            </field>
        </record>
        <record id="airline_airport_model_action" model="ir.actions.act_window">
            <field name="name">Airports</field>
            <field name="res_model">airport.model</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new airport, the first step of a new airport!
                </p>
            </field>
        </record>
        <record id="airline_model_action_help" model="ir.actions.act_window">
            <field name="name">Help</field>
            <field name="res_model">airline.model</field>
            <field name="view_mode">list,form</field>
        </record>


        <record id="airline_view_tree" model="ir.ui.view">
            <field name="name">Airlines</field>
            <field name="model">airline.model</field>
            <field name="arch" type="xml">
                <tree expand="1" string="Airline" decoration-warning="state == 'landed'"
                    decoration-info="state == 'upcoming'" decoration-success="state== 'take_off'"
                    decoration-danger="active == False">
                    <field name="name"></field>
                    <field name="depart_airport_id" />
                    <field name="arrival_airport_id" />
                    <field name="depart_date_time"></field>
                    <field name="arrival_date_time"></field>
                    <field name="type"></field>
                    <field name="total_distance"></field>
                    <field name="price" widget="monetary"></field>
                    <field name="gate_no" optional='hide'></field>
                    <field name="active" optional='hide'></field>
                    <field name="state" invisible='1'></field>
                </tree>
            </field>
        </record>

        <record id="airline_view_form" model="ir.ui.view">
            <field name="name">Airlines</field>
            <field name="model">airline.model</field>
            <field name="arch" type="xml">
                <form string="Airline">
                    <header>
                        <field name="state" widget="statusbar"
                            options="{'clickable': '1'}"></field>
                    </header>
                    <sheet>
                        <field name="image" widget='image' class="oe_avatar bg-black" nolabel="1"/>
                        <label for="name" string="Name" />
                        <h1>
                            <field name="name" placeholder="Name"></field>
                        </h1>

                        <group>
                            <group>
                                <field name="type"></field>
                                <field name="gate_no"></field>
                            </group>
                            <group>
                                <field name="total_distance"></field>
                                <field name="price" widget="monetary"></field>
                            </group>
                        </group>
                        <notebook>
                            <page name="Details">
                                <group>
                                    <group>
                                        <field name="depart_date_time"></field>
                                        <field name="depart_airport_id"></field>
                                    </group>
                                    <group>
                                        <field name="arrival_date_time"></field>
                                        <field name="arrival_airport_id"></field>
                                    </group>
                                </group>
                            </page>
                            <page name="Passengers">
                                <field name="passenger_ids" type="xml">
                                    <tree>
                                        <field name="name"></field>
                                        <field name="airline_class" />
                                        <field name="seat_no" />
                                        <field name="nationality"></field>
                                    </tree>
                                </field>
                            </page>
                            <page name="About">
                                <group>
                                    <field name="description"></field>
                                </group>
                            </page>
                            <page name="Other">
                                <group>
                                    <group>
                                        <field name="active"></field>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="activity_ids" widget="mail_activity" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>


        <record id="airline_view_search" model="ir.ui.view">
            <field name="name">Airlines</field>
            <field name="model">airline.model</field>
            <field name="arch" type="xml">
                <search string="Airline_Model">
                    <field name="name"></field>
                    <field name="depart_date_time"></field>
                    <field name="arrival_airport_id"></field>
                    <field name="depart_airport_id"></field>
                    <field name="arrival_date_time"></field>
                    <field name="type"></field>
                    <separator />
                    <filter string="Inactive" name="active" domain="[('active', '=', False)]" />
                    <filter string="Upcoming" name="upcoming"
                        domain="[('state', 'in',('upcoming', 'landed'))]" />
                    <group string="Group By">
                        <filter string="Name" name="name" context="{'group_by':'name'}" />
                        <filter string="Departure Airport" name="depart_airport_id"
                            context="{'group_by':'depart_airport_id'}" />
                        <separator />
                        <filter string="Arrival Airport" name="arrival_airport_id"
                            context="{'group_by':'arrival_airport_id'}" />
                        <filter string="Type" name="type" context="{'group_by':'type'}" />

                    </group>
                </search>
            </field>
        </record>
    </data>
</odoo>